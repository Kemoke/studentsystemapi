# Auth
POST /auth/login                    controllers.AuthController.login()
POST /auth/register                 controllers.AuthController.register()

# User routes
GET     /users                      controllers.UserController.list()
POST    /users                      controllers.UserController.add()
GET     /users/self                 controllers.UserController.getSelf()
GET     /users/:id                  controllers.UserController.get(id)
PUT     /users/:id                  controllers.UserController.edit(id)
DELETE  /users/:id                  controllers.UserController.delete(id)

# Department routes
GET /departments                    controllers.DepartmentController.list()
POST /departments                   controllers.DepartmentController.add()
GET /departments/:id                controllers.DepartmentController.get(id)
PUT /departments/:id                controllers.DepartmentController.edit(id)
DELETE /departments/:id             controllers.DepartmentController.delete(id)

# Program routes
GET /programs                      controllers.ProgramController.list()
POST /programs                     controllers.ProgramController.add()
GET /programs/:id                  controllers.ProgramController.get(id)
PUT /programs/:id                  controllers.ProgramController.edit(id)
DELETE /programs/:id               controllers.ProgramController.delete(id)

# Course routes
GET /courses                       controllers.CourseController.list()
POST /courses                      controllers.CourseController.add()
GET /courses/:id                   controllers.CourseController.get(id)
PUT /courses/:id                   controllers.CourseController.edit(id)
DELETE /courses/:id                controllers.CourseController.delete(id)

# Section routes
GET /sections                      controllers.SectionController.list()
POST /sections                     controllers.SectionController.add()
GET /sections/:id                  controllers.SectionController.get(id)
PUT /sections/:id                  controllers.SectionController.edit(id)
DELETE /sections/:id               controllers.SectionController.delete(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
